{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/": ["src/"]
    }
  },
  "include": ["src//*"],
  "exclude": ["node_modules"]
}
